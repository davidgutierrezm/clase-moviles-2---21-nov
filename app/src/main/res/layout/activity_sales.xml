<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sales"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:textColor="@color/aguamarina"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Ventas"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="N° Venta"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etidsale"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese n° venta"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="number"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Id del vendedor"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etidsellers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese id del vendedor"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_person_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Fecha de la venta"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etdatesale"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese fecha de la venta"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="date"
        android:drawableStart="@drawable/ic_baseline_date_range_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Valor"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etsalevalue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese valor de la venta"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/btnsavesale"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_save_24"
            />
        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/btnback"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_undo_24"
            />


    </LinearLayout>

</LinearLayout>